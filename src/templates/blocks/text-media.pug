-   type: 'gallery',
-   slides: [
-     {
-       type: 'youtube',
-       url: 'https://www.youtube.com/embed/ScMzIvxBSi4'
-     },
-     {
-       type: 'image',
-       url: '../../images/600x400.svg',
-       alt: 'Dolor sit amet'
-     }
-   ]
- }
- var TEXT_MEDIA_GMAP = { type: 'gmap' }
