-   { class: 'bi-diagram-3', text: 'Similique nemo perspiciatis eaque nostrum' }
- ]

+text-media({
  class: 'text-bg-dark',
  content: TEXT_MEDIA_CONTENT,
  link: {
    ...TEXT_MEDIA_LINK,
    class: 'btn-light',
  },
  list: TEXT_MEDIA_LIST,
  media: TEXT_MEDIA_IMAGE
})

+text-media({
  class: 'text-bg-primary',
  content: TEXT_MEDIA_CONTENT,
  link: {
    ...TEXT_MEDIA_LINK,
    class: 'btn-success',
  },
  list: TEXT_MEDIA_LIST,
  media: TEXT_MEDIA_YOUTUBE,
  reversed: true
})

+text-media({
  class: 'text-bg-light',
  content: TEXT_MEDIA_CONTENT,
  link: {
    ...TEXT_MEDIA_LINK,
    class: 'btn-dark',
  },
  list: TEXT_MEDIA_LIST,
  media: TEXT_MEDIA_GALLERY
})

+text-media({
  class: 'text-bg-dark',
  content: TEXT_MEDIA_CONTENT,
  link: {
    ...TEXT_MEDIA_LINK,
    class: 'btn-light',
  },
  list: TEXT_MEDIA_LIST,
  media: TEXT_MEDIA_GMAP,
  reversed: true
})
