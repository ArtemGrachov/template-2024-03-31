- var TEXT_MEDIA_LINK = {
-   modifier: 'btn-light',
-   url: 'https://github.com/ArtemGrachov',
-   title: 'Visit GitHub'
- }

- var TEXT_MEDIA_IMAGE = { type: 'image', url: '../../images/600x400.svg', alt: 'Dolor sit amet' }
- var TEXT_MEDIA_YOUTUBE = { type: 'youtube', url: 'https://www.youtube.com/embed/ScMzIvxBSi4' }
